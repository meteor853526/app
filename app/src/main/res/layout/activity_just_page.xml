<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:descendantFocusability="blocksDescendants"
    tools:context=".Just_page">


    <ListView
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/lv_main_meals"
        android:layout_width="405dp"
        android:layout_height="387dp"
        android:layout_marginTop="4dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="413dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:onClick="onClickToCategory_page"
            android:text="@string/back" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="80dp"
            android:textSize="25dp"
            android:text="Food" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:backgroundTint="#E6A961"
            android:background="@drawable/button_category"
            android:text="單點區" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="161dp"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_currentOrder"
            android:layout_width="159dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="已選(等購物車做完)" />

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="130dp"
            android:backgroundTint="#E6A961"
            android:text="加入購物車"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>